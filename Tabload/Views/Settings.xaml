<Window x:Class="Tabload.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabload.Views"
        mc:Ignorable="d"
        Title="Settings"
        Height="450" Width="450"
        MaxHeight="450" MaxWidth="450"
        WindowStyle="None"
        Background="#282c34">
    <Grid>
        <Label x:Name="lblTitle" Content="Settings" Width="125" Height="25"/>
        <Label x:Name="lblSiteAdress" Content="Site Adress" Width="125" Height="25"/>
        <TextBox x:Name="tbSiteAdress" Width="125" Height="25"/>
        <Button x:Name="btnSaveChanges" Content="Save Changes" Margin="250,350,0,0" Width="125" Height="25" Click="SaveChanges"/>
    </Grid>
</Window>
